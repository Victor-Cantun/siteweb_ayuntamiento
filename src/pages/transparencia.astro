---
const title = 'H. Ayuntamiento de Escárcega';
import TransparenciaComponent from '../components/Transparencia';
import Layout from '../layouts/Layout_white.astro'
---
<Layout title={title}>
    <main class="flex justify-center bg-slate-100 ">
        <section class="w-[80%] space-y-5 mb-10 mx-auto">

            <div class="mx-auto flex justify-center px-5">
                <h2 class="mb-4 text-2xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white uppercase">Transparencia</h2>
            </div>

            <div class="flex justify-center px-5 w-full">
                <ul class="list-none w-full">
                    <li class=" bg-cherry w-full hover:bg-red-900 border border-e-white flex">
                        <a target="_blank" href="/COTAIPEC" class="cursor-pointer p-6 grow">
                            <span class="text-white">Obligaciones de Transparencia</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="flex justify-center px-5 w-full">
                <TransparenciaComponent client:load></TransparenciaComponent>
            </div>

            <div class="flex justify-center  px-5">
                <div id="accordion-collapse" data-accordion="collapse" class="w-full">
                    <h2 id="accordion-collapse-heading-1" class=" flex" >
                        <button type="button" style="background-color:#861F3C" class="flex bg-cherry items-center justify-between w-full p-5 font-medium rtl:text-right text-white border border-b-0  rounded-t-xl hover:bg-red-900 gap-3" data-accordion-target="#accordion-collapse-body-1" aria-expanded="false" aria-controls="accordion-collapse-body-1">
                        <span>Marco Jurídico</span>
                            <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                            </svg>
                        </button>
                    </h2>
                    <div id="accordion-collapse-body-1" class="hidden" aria-labelledby="accordion-collapse-heading-1">
                        <!-- CONTENIDO -->
                        <div class=" m-auto w-full py-2 px-4 border shadow-md rounded-b-lg">
                            <ul class="list-none">
                                <li class=" bg-cherry w-full hover:bg-red-900 border border-e-white flex">
                                    <a target="_blank" href="/codigo_etica" class="cursor-pointer p-6 grow">
                                        <span class="text-white">Código de ética</span>
                                    </a>
                                </li>
                                <li class=" bg-cherry w-full hover:bg-red-900 border border-e-white flex">
                                    <a target="_blank" href="/codigo_conducta" class="cursor-pointer p-6 grow" >
                                        <span class="text-white">Código de conducta</span>
                                    </a>
                                </li>
                                <li class=" bg-cherry w-full hover:bg-red-900 border border-e-white flex">
                                    <a target="_blank" href="/reglamento_admon" class="cursor-pointer p-6 grow" >
                                        <span class="text-white">Reglamento de la administración pública municipal de Escárcega</span>
                                    </a>
                                </li>
                                <li class=" bg-cherry w-full hover:bg-red-900 border border-e-white flex">
                                    <a target="_blank" href="/bando_policia" class="cursor-pointer p-6 grow" >
                                        <span class="text-white">Bando de policía y gobierno del municipio de Escárcega</span>
                                    </a>
                                </li>                                
                            </ul>
                        </div>                         
                        <!-- CONTENIDO -->
                    </div>
                </div>
            </div>

            <!-- INFORMES TRIMESTRALES -->
            <div class="flex justify-center  px-5">
                <div id="accordion-collapse-2" data-accordion="collapse" class="w-full">
                    <h2 id="2" class=" flex" >
                        <button type="button" style="background-color:#861F3C" class="flex bg-cherry items-center justify-between w-full p-5 font-medium rtl:text-right text-white border border-b-0  rounded-t-xl hover:bg-red-900 gap-3" data-accordion-target="#accordion-collapse-body-2" aria-expanded="false" aria-controls="accordion-collapse-body-2">
                        <span>Informes Trimestrales de las Ministraciones de Apoyo Estatal entregadas a las Juntas, Comisarias y Agencias Municipales</span>
                            <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                            </svg>
                        </button>
                    </h2>
                    <div id="accordion-collapse-body-2" class="hidden" aria-labelledby="accordion-collapse-heading-2">
                        <!-- CONTENIDO -->
                        <div class=" m-auto w-full py-2 px-4 border shadow-md rounded-b-lg">
                            <div class="bg-slate-100">
                                <h3 class="text-xl font-semibold mb-2">Ejercicio 2024</h3>
                                <nav aria-label="Page navigation example">
                                    <ul class="inline-flex -space-x-px text-base h-10">
                                        <li>
                                        <a href="/1er_trimestre_2024" target="_blank" class="flex items-center justify-center px-4 h-10 ms-0 leading-tight text-white bg-red-800 border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">1</a>
                                        </li>
                                        <li>
                                        <a href="/2do_trimestre_2024" target="_blank" class="flex items-center justify-center px-4 h-10 leading-tight text-white bg-red-800 border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">2</a>
                                        </li>
                                        <li>
                                        <a href="/3er_trimestre_2024" target="_blank" class="flex items-center justify-center px-4 h-10 leading-tight text-white bg-red-800 border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">3</a>
                                        </li>
                                        <li>
                                        <a href="/4to_trimestre_2024" target="_blank"class="flex items-center justify-center px-4 h-10 leading-tight text-white bg-red-800 border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">4</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <div class="bg-slate-100">
                                <h3 class="text-xl font-semibold mb-2">Ejercicio 2025</h3>
                                <nav aria-label="Page navigation example">
                                    <ul class="inline-flex -space-x-px text-base h-10">
                                        <li>
                                        <a href="/1er_trimestre_2025" target="_blank" class="flex items-center justify-center px-4 h-10 ms-0 leading-tight text-white bg-red-800 border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">1</a>
                                        </li>
                                        <li>
                                        <a href="/2do_trimestre_2025" target="_blank" class="flex items-center justify-center px-4 h-10 leading-tight text-white bg-red-800 border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">2</a>
                                        </li>
                                        <li>
                                        <a href="#" class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">3</a>
                                        </li>
                                        <li>
                                        <a href="#" class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">4</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>

                        </div>                         
                        <!-- CONTENIDO -->
                    </div>
                </div>
            </div>             
            <!-- INFORMES TRIMESTRALES -->

            <div class="flex justify-center px-5 w-full">
                <ul class="list-none w-full">
                    <li class=" bg-cherry w-full hover:bg-red-900 border border-e-white flex">
                        <a target="_blank" href="/PAIP" class="cursor-pointer p-6 grow">
                            <span class="text-white">Programa Anual de Inversión Pública</span>
                        </a>
                    </li>
                </ul>
            </div>

        </section>

    </main>
</Layout>
