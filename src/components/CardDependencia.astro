---
const {photo,director,direction,phone} = Astro.props;
---
<div class="bg-white grid relative shadow rounded overflow-hidden before:absolute before:bg-cherry before:w-[5px] before:h-[400px] before:z-0 before:transition-all hover:before:w-full hover:before:h-full after:absolute after:inset-[5px] after:z-0 after:bg-white">
    <div class="flex items-center gap-x-6 px-3 py-2 z-10">
        <img class="h-16 w-16 rounded-full " src={photo} alt="">
        <div>
            <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">{director}</h3>
            <p class="text-sm font-semibold leading-6 text-cherry">{direction}</p>
            <p class="text-sm font-semibold leading-6 text-gray-800"> {phone}</p>
        </div>
    </div>
</div>